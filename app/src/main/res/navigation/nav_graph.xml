<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bsikar.helix.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.bsikar.helix.ui.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.bsikar.helix.ui.library.LibraryFragment"
        android:label="@string/library"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_audiobookPlayerFragment"
            app:destination="@id/audiobookPlayerFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_ebookReaderFragment"
            app:destination="@id/ebookReaderFragment" />
    </fragment>

    <fragment
        android:id="@+id/audiobookPlayerFragment"
        android:name="com.bsikar.helix.ui.player.AudiobookPlayerFragment"
        android:label="@string/audiobook_player"
        tools:layout="@layout/fragment_audiobook_player" />

    <fragment
        android:id="@+id/ebookReaderFragment"
        android:name="com.bsikar.helix.ui.reader.EbookReaderFragment"
        android:label="@string/ebook_reader"
        tools:layout="@layout/fragment_ebook_reader" />
</navigation>
